---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"div"> & {
  linkable?: boolean;
};

const { linkable = true, class: classes, ...rest } = Astro.props;
---

<h2
  class:list={[
    "font-bold text-primary mt-[60px] mb-[20px] ml-auto gap-1 group",
    classes,
  ]}
  {...rest}
  data-blurrable
>
  <slot />
  {
    linkable && (
      <a
        href={"#" + rest.id}
        class="inline-flex mb-[2px] ml-1 align-middle"
        aria-label="Anchor"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon-tabler icon-tabler-anchor self-center opacity-0 group-hover:opacity-100 w-[1em] h-[1em] text-disabled hover:text-secondary duration-[0.15s] icon"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M12 9v12m-8 -8a8 8 0 0 0 16 0m1 0h-2m-14 0h-2" />
          <path d="M12 6m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
        </svg>
      </a>
    )
  }
</h2>

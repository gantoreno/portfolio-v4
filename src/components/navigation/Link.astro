---
import { type HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  active?: boolean;
};

const { active = true, class: classes, ...rest } = Astro.props;
---

<a
  class:list={[
    classes,
    {
      ["text-disabled hover:text-secondary duration-150"]: !active,
      ["decoration-disabled text-primary underline decoration-1 underline-offset-2 inline-block"]:
        active,
    },
  ]}
  {...rest}
  data-astro-prefetch="viewport"
>
  <slot />
</a>

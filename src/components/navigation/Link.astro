---
import { type HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  active?: boolean;
};

const { active = true, class: classNames, ...rest } = Astro.props;
---

<a
  class:list={[
    classNames,
    {
      ["text-disabled hover:text-secondary duration-[0.15s]"]: !active,
      ["decoration-disabled text-primary underline decoration-[1px] underline-offset-[2px]"]:
        active,
    },
  ]}
  {...rest}
>
  <slot />
</a>

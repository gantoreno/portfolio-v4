---
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

import Italic from "@/components/typography/Italic.astro";

import { getDownscaledPlaceholder } from "@/utils/image";

type Props = Omit<HTMLAttributes<"img">, "src" | "alt"> & {
  src: ImageMetadata;
  alt: any;
  withCaption?: boolean;
};

const {
  src,
  alt,
  width,
  height,
  title: themeDirective,
  withCaption = true,
} = Astro.props;

if (themeDirective) {
  console.log(Astro.props);
}

const blur = await getDownscaledPlaceholder(src);
---

<div>
  <figure
    class="mb-[20px]"
    data-blurrable
    data-theme-directive={themeDirective}
  >
    <div
      style={`background-image: url(${blur}); background-size: cover;`}
      class="mb-[26px] mx-auto mt-[26px] rounded-md overflow-hidden relative"
    >
      <Image
        class="backdrop-blur-md"
        src={src ?? ""}
        alt={alt ?? ""}
        loading="lazy"
        decoding="async"
        width={width as number}
        height={height as number}
        onload="this.dataset.loaded = true"
        data-loaded="false"
      />
    </div>
    {
      withCaption && (
        <figcaption class="text-center !text-disabled">
          <Italic>
            {alt}
            <slot />
          </Italic>
        </figcaption>
      )
    }
  </figure>
</div>

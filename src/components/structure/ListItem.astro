---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"li">;

const { class: classes, ...rest } = Astro.props;
---

<li
  class:list={[
    "[&>a]:decoration-disabled [&>a]:text-primary [&>a]:underline [&>a]:mx-px [&>a]:decoration-[1px] [&>a]:underline-offset-[2px]",
    classes,
  ]}
  {...rest}
  data-blurrable
>
  <slot />
</li>

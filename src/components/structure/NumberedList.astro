---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"ol">;

const { class: classes, ...rest } = Astro.props;
---

<ol
  class:list={[
    "list-decimal text-secondary mb-[20px] marker:text-primary pl-[34px] [&>li]:pl-[10px]",
    classes,
  ]}
  data-blurrable
  {...rest}
>
  <slot />
</ol>

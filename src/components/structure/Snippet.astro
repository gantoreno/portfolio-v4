---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"pre">;

const { class: classes, ...rest } = Astro.props;
---

<pre
  data-blurrable
  class:list={[
    "p-[20px] mb-[20px] rounded-md [&>code]:p-0 [&>code:before]:content-[''] overflow-x-scroll [&>code:after]:content-[''] shiki border border-soft !bg-soft !bg-opacity-25 line [&>code]:!leading-[22px]",
    classes,
  ]}
  {...rest}><slot /></pre>

---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"pre">;

const { class: classes, ...rest } = Astro.props;
---

<pre
  data-blurrable
  class:list={[
    "p-[20px] py-[16.25px] mb-[20px] rounded-md bg-[var(--astro-code-color-background)] [&>code]:bg-[var(--astro-code-color-background)] [&>code]:p-0 [&>code:before]:content-[''] overflow-x-scroll [&>code:after]:content-['']",
    classes,
  ]}
  {...rest}><slot /></pre>

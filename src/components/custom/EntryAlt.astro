---
import { format } from "date-fns";

import Link from "@/components/navigation/Link.astro";
import Paragraph from "../structure/Paragraph.astro";

type Props = {
  title: string;
  link: string;
  date: Date;
  description: string;
  new?: boolean;
};

const { title, link, date, description, new: isNew = false } = Astro.props;
---

<div class="flex justify-between gap-[20px] mb-5">
  <div>
    <span class="block mb-[5px]"
      >{isNew ? "âœ¨ " : ""}<Link href={link}>{title}</Link></span
    >
    <Paragraph class="!mb-0">{description}</Paragraph>
  </div>
  <span class="text-disabled">{format(date, "MM/dd")}</span>
</div>
